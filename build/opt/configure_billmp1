rm -rf CMake*

export MPI_PATH=/opt/mpich/install/mpich-3.2/bin

cmake                                                   \
    -G "Unix Makefiles"                                 \
    -D CMAKE_BUILD_TYPE=Release                         \
    -D CMAKE_C_COMPILER:PATH=${MPI_PATH}/mpicc          \
        -D CFLAGS="-fPIC"                               \
    -D CMAKE_CXX_COMPILER:PATH=${MPI_PATH}/mpic++       \
        -D CXXFLAGS="-fPIC"                             \
        -D CXX_STD=11                                   \
    -D USE_MPI=1                                        \
        -D MPI_COMPILER=1                               \
        -D MPIEXEC=${MPI_PATH}/mpirun                   \
    -D USE_MATLAB=0                                     \
    -D QWT_URL:PATH=/opt/TPLs/src/qwt-6.1.2.tar.bz2     \
    -D ENABLE_GCOV=0                                    \
    ../../src/



