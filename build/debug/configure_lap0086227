rm -rf CMake*

cmake                                                   \
    -G "Unix Makefiles"                                 \
    -D CMAKE_C_COMPILER:PATH=mpicc                      \
        -D CFLAGS="-fPIC"                               \
    -D CMAKE_CXX_COMPILER:PATH=mpic++                   \
        -D CXXFLAGS="-fPIC"                             \
    -D USE_MPI=1                                        \
        -D MPI_COMPILER=1                               \
        -D MPIEXEC=/packages/mpich-3.1/opt/bin/mpiexec  \
        -D MPIEXEC_NUMPROC_FLAG=-np                     \
        -D MPI_INCLUDE=/packages/mpich-3.1/opt/include  \
        -D MPI_LINK_FLAGS="-L/packages/mpich-3.1/opt/lib;-Wl,-rpath,/packages/mpich-3.1/opt/lib" \
        -D MPI_LIBRARIES="-lmpichcxx;-lmpich;-lopa;-lmpl;-lrt;-lpthread" \
    -D CMAKE_BUILD_TYPE=Debug                           \
    -D USE_MATLAB=1                                     \
        -D MATLAB_DIRECTORY:PATH=/usr/local/MATLAB/R2014a \
    ../../src/



